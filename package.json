{
  "name": "safescan",
  "private": true,
  "version": "0.1.0",
  "description": "前端安全检测工具集",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production ts-node scripts/build.ts",
    "dev": "cross-env NODE_ENV=development ts-node scripts/build.ts",
    "clean": "rimraf packages/*/dist",
    "test": "jest",
    "lint": "eslint --ext .ts,.tsx packages/*/src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "security",
    "static-analysis",
    "memory-leak",
    "xss",
    "frontend"
  ],
  "author": "SafeScan Team",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chalk": "^5.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{json,md}": "prettier --write"
  }
}
