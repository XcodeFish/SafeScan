{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "paths": {
      "@safescan/*": ["packages/*/src"],
      "@safescan/core/*": ["packages/core/src/*"],
      "@safescan/plugins/*": ["packages/plugins/src/*"],
      "@safescan/integrations/*": ["packages/integrations/src/*"],
      "@safescan/rules/*": ["packages/rules/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/dist"]
}
